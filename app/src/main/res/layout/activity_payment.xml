<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f6fa"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvTotalBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#273c75"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembayaran"
        android:textSize="18sp"
        android:textColor="#192a56"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <RadioGroup
        android:id="@+id/radioGroupMetode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/radioTunai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunai"
            android:checked="true"
            android:textColor="#273c75"
            android:textSize="16sp" />
        <RadioButton
            android:id="@+id/radioQris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QRIS"
            android:textColor="#273c75"
            android:textSize="16sp"
            android:layout_marginLeft="24dp" />
        <RadioButton
            android:id="@+id/radioBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank"
            android:textColor="#273c75"
            android:textSize="16sp"
            android:layout_marginLeft="24dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/etKeterangan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:textColor="#192a56"
        android:textSize="16sp"
        android:background="#fff"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnBayar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="BAYAR SEKARANG"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#273c75"
        android:textColor="#fff"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:gravity="center" />
</LinearLayout>
